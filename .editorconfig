dotnet_naming_symbols.constants_symbols.required_modifiers = const
dotnet_naming_symbols.test_methods_override_symbols.applicable_accessibilities = local, public
dotnet_naming_symbols.test_methods_override_symbols.applicable_kinds = method
dotnet_naming_symbols.test_methods_override_symbols.required_modifiers = static
dotnet_naming_symbols.test_methods_symbols.applicable_accessibilities = local, public
dotnet_naming_symbols.test_methods_symbols.applicable_kinds =
dotnet_naming_symbols.test_methods_symbols_1.applicable_accessibilities = local, public
